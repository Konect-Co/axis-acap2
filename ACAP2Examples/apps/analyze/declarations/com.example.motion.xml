<!-- Motion detection event declaration -->

<Declaration>
  <Item>
    <Key NameSpace="tnaxis">topic0</Key>
    <String>CameraApplicationPlatform</String>
  </Item>

  <Item>
    <Key NameSpace="tnsexample">topic1</Key>
    <String>Analysis</String>
  </Item>

  <Item>
    <Key NameSpace="tnsexample">topic2</Key>
    <String>MotionDetection</String>
  </Item>

  <Item>
    <!-- The id of a motion detection window -->
    <Key>window</Key>
    <!-- The window id is left unspecified which means it's variable.
         The actual value will be set in code when the event is declared. -->
    <Integer/>
    <Tag>onvif-source</Tag>
  </Item>

  <Item>
    <!-- This is the state of motion detection in the window. If
         motion was detected the value will be TRUE otherwise FALSE. -->
    <Key>motion</Key>
    <!-- The motion state is left unspecified which means it's variable.
         The actual value will be set in code when the event is declared. -->
    <Boolean/>
    <Tag>onvif-data</Tag>
    <Tag>property-state</Tag>
  </Item>
</Declaration>
